<h1> Edit the task: <%= @task.title %></h1>

<div class="form">
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.check_box :completed %>
  <%= f.label :completed%>

  <%= f.submit %>
  <% end %>
</div>

<div>
  <form action="" method="patch">
  </form>
</div>

<div class="buttons">
  <div class="link">
    <%= link_to 'Back to list', tasks_path %>
  </div>
</div>
