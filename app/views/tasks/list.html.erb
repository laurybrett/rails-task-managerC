<div class="container">
<h1>My tasks</h1>

  <div class="tasks">
    <ul>
      <% @tasks.each do |task| %>
        <% mark = task.completed ? 'far fa-check-square' : 'far fa-square' %>
      <li><i class="<%= mark %>"></i> <%= link_to task.title, task_path(task) %></li>
      <% end %>
    </ul>
  </div>

  <%= link_to 'Add a new task', tasks_new_path %>

</div>


